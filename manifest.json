{
  "name": "Color Picker",
  "description": "A color picker extension by Arslan Zaki",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./src/background.js"
  },
  "action": {
    "default_popup": "./src/popup.html"
  },
  "icons": {
    "16": "./images/color-picker-16.png",
    "32": "./images/color-picker-32.png",
    "64": "./images/color-picker-64.png"
  },
  "permissions": ["activeTab", "scripting"]
}
